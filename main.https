<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HTTP-Link-Aufruf</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <h1>Hintergrund-Link-Aufruf</h1>
    <p>Halte die Taste <strong>"A"</strong> gedrückt, um <code>http://192.168.178.121/l</code> aufzurufen.</p>
    <p id="status">Status: Inaktiv</p>

    <script>
        let isKeyPressed = false;
        let intervalId;
        const urlToFetch = "http://192.168.178.121/l";; // Ziel-URL
        const statusElement = document.getElementById("status");

        // Funktion, die die Ziel-URL im Hintergrund aufruft
        async function callLink() {
            try {
                const response = await fetch(urlToFetch);
                console.log(`Antwort von Ziel-URL: ${response.status}`);
            } catch (error) {
                console.error(`Fehler beim Abrufen von ${urlToFetch}:`, error);
            }
        }

        // Tastenereignisse überwachen
        document.addEventListener("keydown", (event) => {
            if (event.key === "a" && !isKeyPressed) {
                isKeyPressed = true;
                statusElement.textContent = "Status: Aktiv";
                intervalId = setInterval(callLink, 1000); // Wiederholungsintervall: 1 Sekunde
            }
        });

        document.addEventListener("keyup", (event) => {
            if (event.key === "a") {
                isKeyPressed = false;
                statusElement.textContent = "Status: Inaktiv";
                clearInterval(intervalId);
            }
        });
    </script>
</body>
</html>
